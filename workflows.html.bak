<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="OpsMind Workflows - IT Service Management">
    <title>Workflows - OpsMind</title>
    
    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet">
    <!-- Custom CSS -->
    <link href="/assets/css/main.css" rel="stylesheet">

    <!-- Runtime config (must be before any app/service scripts) -->
    <script src="/assets/js/config.js"></script>
</head>
<body class="app-body">
    <!-- Navigation (loaded dynamically) -->
    <nav class="navbar-main" id="navbar-container"></nav>

    <div class="app-wrapper">
        <!-- Sidebar (loaded dynamically) -->
        <div id="sidebar-container"></div>

        <!-- Main Content -->
        <main class="main-content">
            <!-- Page Header -->
            <div class="page-header">
                <div class="page-header-content">
                    <h1 class="page-title">Workflows</h1>
                    <p class="page-subtitle">Automate IT processes and manage workflow executions</p>
                </div>
                <div class="page-header-actions">
                    <button class="btn btn-outline-secondary me-2" id="refreshWorkflows">
                        <i class="bi bi-arrow-clockwise me-1"></i> Refresh
                    </button>
                    <button class="btn btn-primary" id="createWorkflowBtn">
                        <i class="bi bi-plus-lg me-1"></i> New Workflow
                    </button>
                </div>
            </div>

            <!-- Page Content -->
            <div class="page-content">
                <!-- Workflow Stats -->
                <div class="row g-3 mb-4">
                    <div class="col-6 col-lg-3">
                        <div class="stat-card-mini">
                            <div class="stat-icon-mini bg-primary-subtle text-primary">
                                <i class="bi bi-diagram-3"></i>
                            </div>
                            <div>
                                <p class="stat-label-mini">Total Workflows</p>
                                <h4 class="stat-value-mini" id="totalWorkflows">-</h4>
                            </div>
                        </div>
                    </div>
                    <div class="col-6 col-lg-3">
                        <div class="stat-card-mini">
                            <div class="stat-icon-mini bg-success-subtle text-success">
                                <i class="bi bi-check-circle"></i>
                            </div>
                            <div>
                                <p class="stat-label-mini">Active</p>
                                <h4 class="stat-value-mini" id="activeWorkflows">-</h4>
                            </div>
                        </div>
                    </div>
                    <div class="col-6 col-lg-3">
                        <div class="stat-card-mini">
                            <div class="stat-icon-mini bg-info-subtle text-info">
                                <i class="bi bi-play-circle"></i>
                            </div>
                            <div>
                                <p class="stat-label-mini">Running</p>
                                <h4 class="stat-value-mini" id="runningWorkflows">-</h4>
                            </div>
                        </div>
                    </div>
                    <div class="col-6 col-lg-3">
                        <div class="stat-card-mini">
                            <div class="stat-icon-mini bg-warning-subtle text-warning">
                                <i class="bi bi-clock-history"></i>
                            </div>
                            <div>
                                <p class="stat-label-mini">Executions Today</p>
                                <h4 class="stat-value-mini" id="executionsToday">-</h4>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Tabs -->
                <ul class="nav nav-tabs mb-4" id="workflowTabs" role="tablist">
                    <li class="nav-item" role="presentation">
                        <button class="nav-link active" id="workflows-tab" data-bs-toggle="tab" data-bs-target="#workflows-panel" type="button" role="tab" aria-controls="workflows-panel" aria-selected="true">
                            <i class="bi bi-diagram-3 me-1"></i> Workflows
                        </button>
                    </li>
                    <li class="nav-item" role="presentation">
                        <button class="nav-link" id="executions-tab" data-bs-toggle="tab" data-bs-target="#executions-panel" type="button" role="tab" aria-controls="executions-panel" aria-selected="false">
                            <i class="bi bi-play-circle me-1"></i> Executions
                        </button>
                    </li>
                </ul>

                <div class="tab-content" id="workflowTabContent">
                    <!-- Workflows Tab -->
                    <div class="tab-pane fade show active" id="workflows-panel" role="tabpanel" aria-labelledby="workflows-tab">
                        <!-- Filter Bar -->
                        <div class="d-flex flex-wrap gap-2 mb-3">
                            <div class="input-group" style="max-width: 300px;">
                                <span class="input-group-text"><i class="bi bi-search"></i></span>
                                <input type="text" class="form-control" id="workflowSearch" placeholder="Search workflows...">
                            </div>
                            <select class="form-select" style="max-width: 150px;" id="workflowStatusFilter">
                                <option value="">All Status</option>
                                <option value="active">Active</option>
                                <option value="inactive">Inactive</option>
                                <option value="draft">Draft</option>
                            </select>
                            <select class="form-select" style="max-width: 150px;" id="workflowTriggerFilter">
                                <option value="">All Triggers</option>
                                <option value="manual">Manual</option>
                                <option value="ticket_created">Ticket Created</option>
                                <option value="ticket_updated">Ticket Updated</option>
                                <option value="sla_breach">SLA Breach</option>
                                <option value="scheduled">Scheduled</option>
                            </select>
                        </div>

                        <!-- Workflows Grid -->
                        <div class="row g-4" id="workflowsGrid">
                            <!-- Loading State -->
                            <div class="col-12 text-center py-5" id="workflowsLoading">
                                <div class="spinner-border text-primary" role="status">
                                    <span class="visually-hidden">Loading workflows...</span>
                                </div>
                                <p class="text-muted mt-2">Loading workflows...</p>
                            </div>
                        </div>

                        <!-- Empty State -->
                        <div class="empty-state d-none" id="workflowsEmpty">
                            <i class="bi bi-diagram-3"></i>
                            <h4>No Workflows Found</h4>
                            <p>Create your first workflow to automate IT processes.</p>
                            <button class="btn btn-primary" id="createFirstWorkflow">
                                <i class="bi bi-plus-lg me-1"></i> Create Workflow
                            </button>
                        </div>

                        <!-- Error State -->
                        <div class="error-state d-none" id="workflowsError">
                            <i class="bi bi-exclamation-circle"></i>
                            <h4>Unable to Load Workflows</h4>
                            <p id="workflowsErrorMessage">An error occurred.</p>
                            <button class="btn btn-primary" id="retryLoadWorkflows">
                                <i class="bi bi-arrow-clockwise me-1"></i> Try Again
                            </button>
                        </div>
                    </div>

                    <!-- Executions Tab -->
                    <div class="tab-pane fade" id="executions-panel" role="tabpanel" aria-labelledby="executions-tab">
                        <!-- Filter Bar -->
                        <div class="d-flex flex-wrap gap-2 mb-3">
                            <select class="form-select" style="max-width: 200px;" id="executionWorkflowFilter">
                                <option value="">All Workflows</option>
                                <!-- Options loaded dynamically -->
                            </select>
                            <select class="form-select" style="max-width: 150px;" id="executionStatusFilter">
                                <option value="">All Status</option>
                                <option value="running">Running</option>
                                <option value="completed">Completed</option>
                                <option value="failed">Failed</option>
                                <option value="cancelled">Cancelled</option>
                            </select>
                            <select class="form-select" style="max-width: 150px;" id="executionDateFilter">
                                <option value="today">Today</option>
                                <option value="week" selected>This Week</option>
                                <option value="month">This Month</option>
                                <option value="all">All Time</option>
                            </select>
                        </div>

                        <!-- Executions Table -->
                        <div class="card">
                            <div class="card-body p-0">
                                <div class="table-responsive">
                                    <table class="table table-hover align-middle mb-0">
                                        <thead>
                                            <tr>
                                                <th>Execution ID</th>
                                                <th>Workflow</th>
                                                <th>Trigger</th>
                                                <th>Status</th>
                                                <th>Started</th>
                                                <th>Duration</th>
                                                <th class="text-end">Actions</th>
                                            </tr>
                                        </thead>
                                        <tbody id="executionsTableBody">
                                            <!-- Loading -->
                                            <tr id="executionsLoading">
                                                <td colspan="7" class="text-center py-4">
                                                    <div class="spinner-border spinner-border-sm text-primary" role="status"></div>
                                                    <span class="ms-2">Loading executions...</span>
                                                </td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>

                                <!-- Empty State -->
                                <div class="empty-state d-none py-5" id="executionsEmpty">
                                    <i class="bi bi-play-circle"></i>
                                    <h4>No Executions Found</h4>
                                    <p>No workflow executions match your filters.</p>
                                </div>
                            </div>
                            <div class="card-footer" id="executionsPagination">
                                <div class="d-flex justify-content-between align-items-center">
                                    <span class="text-muted small" id="executionsInfo">Showing 0 executions</span>
                                    <nav aria-label="Executions pagination">
                                        <ul class="pagination pagination-sm mb-0" id="executionsPaginationList">
                                        </ul>
                                    </nav>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>

    <!-- Workflow Detail Modal -->
    <div class="modal fade" id="workflowDetailModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-lg modal-dialog-scrollable">
            <div class="modal-content">
                <div class="modal-header">
                    <div>
                        <h5 class="modal-title" id="workflowDetailTitle">Workflow Details</h5>
                        <span class="badge" id="workflowDetailStatus"></span>
                    </div>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <!-- Loading -->
                    <div class="text-center py-4" id="workflowDetailLoading">
                        <div class="spinner-border text-primary" role="status"></div>
                    </div>

                    <!-- Content -->
                    <div class="d-none" id="workflowDetailContent">
                        <!-- Description -->
                        <div class="mb-4">
                            <label class="text-muted small">Description</label>
                            <p id="workflowDetailDescription"></p>
                        </div>

                        <!-- Info Grid -->
                        <div class="row g-3 mb-4">
                            <div class="col-6 col-md-3">
                                <label class="text-muted small">Trigger Type</label>
                                <p class="mb-0 fw-medium" id="workflowDetailTrigger"></p>
                            </div>
                            <div class="col-6 col-md-3">
                                <label class="text-muted small">Created</label>
                                <p class="mb-0" id="workflowDetailCreated"></p>
                            </div>
                            <div class="col-6 col-md-3">
                                <label class="text-muted small">Last Executed</label>
                                <p class="mb-0" id="workflowDetailLastRun"></p>
                            </div>
                            <div class="col-6 col-md-3">
                                <label class="text-muted small">Total Runs</label>
                                <p class="mb-0" id="workflowDetailTotalRuns"></p>
                            </div>
                        </div>

                        <!-- Workflow Steps -->
                        <h6 class="mb-3">
                            <i class="bi bi-list-ol me-2"></i>Workflow Steps
                        </h6>
                        <div class="workflow-steps" id="workflowStepsList">
                            <!-- Steps rendered here -->
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-success" id="executeWorkflowBtn">
                        <i class="bi bi-play-fill me-1"></i> Execute Now
                    </button>
                    <button type="button" class="btn btn-outline-secondary" id="toggleWorkflowStatusBtn">
                        <i class="bi bi-power me-1"></i> <span id="toggleStatusText">Deactivate</span>
                    </button>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Execution Detail Modal -->
    <div class="modal fade" id="executionDetailModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-lg modal-dialog-scrollable">
            <div class="modal-content">
                <div class="modal-header">
                    <div>
                        <h5 class="modal-title">Execution Details</h5>
                        <span class="text-muted" id="executionDetailId"></span>
                    </div>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <!-- Loading -->
                    <div class="text-center py-4" id="executionDetailLoading">
                        <div class="spinner-border text-primary" role="status"></div>
                    </div>

                    <!-- Content -->
                    <div class="d-none" id="executionDetailContent">
                        <!-- Status Banner -->
                        <div class="alert mb-4" id="executionStatusBanner">
                            <div class="d-flex align-items-center">
                                <i class="bi me-2" id="executionStatusIcon"></i>
                                <div>
                                    <strong id="executionStatusText"></strong>
                                    <p class="mb-0 small" id="executionStatusMessage"></p>
                                </div>
                            </div>
                        </div>

                        <!-- Info Grid -->
                        <div class="row g-3 mb-4">
                            <div class="col-6 col-md-3">
                                <label class="text-muted small">Workflow</label>
                                <p class="mb-0 fw-medium" id="executionWorkflowName"></p>
                            </div>
                            <div class="col-6 col-md-3">
                                <label class="text-muted small">Triggered By</label>
                                <p class="mb-0" id="executionTriggeredBy"></p>
                            </div>
                            <div class="col-6 col-md-3">
                                <label class="text-muted small">Started</label>
                                <p class="mb-0" id="executionStarted"></p>
                            </div>
                            <div class="col-6 col-md-3">
                                <label class="text-muted small">Duration</label>
                                <p class="mb-0" id="executionDuration"></p>
                            </div>
                        </div>

                        <!-- Execution Steps -->
                        <h6 class="mb-3">
                            <i class="bi bi-list-check me-2"></i>Step Execution Log
                        </h6>
                        <div class="execution-steps" id="executionStepsList">
                            <!-- Steps rendered here -->
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-outline-danger d-none" id="cancelExecutionBtn">
                        <i class="bi bi-x-circle me-1"></i> Cancel Execution
                    </button>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Create Workflow Modal (Simplified) -->
    <div class="modal fade" id="createWorkflowModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Create New Workflow</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <form id="createWorkflowForm" novalidate>
                    <div class="modal-body">
                        <div class="row g-3">
                            <div class="col-12">
                                <label for="newWorkflowName" class="form-label">Workflow Name <span class="text-danger">*</span></label>
                                <input type="text" class="form-control" id="newWorkflowName" required maxlength="100">
                                <div class="invalid-feedback">Please enter a workflow name.</div>
                            </div>
                            <div class="col-12">
                                <label for="newWorkflowDescription" class="form-label">Description</label>
                                <textarea class="form-control" id="newWorkflowDescription" rows="3"></textarea>
                            </div>
                            <div class="col-12 col-md-6">
                                <label for="newWorkflowTrigger" class="form-label">Trigger Type <span class="text-danger">*</span></label>
                                <select class="form-select" id="newWorkflowTrigger" required>
                                    <option value="">Select trigger...</option>
                                    <option value="manual">Manual</option>
                                    <option value="ticket_created">Ticket Created</option>
                                    <option value="ticket_updated">Ticket Updated</option>
                                    <option value="sla_breach">SLA Breach</option>
                                    <option value="scheduled">Scheduled</option>
                                </select>
                                <div class="invalid-feedback">Please select a trigger type.</div>
                            </div>
                            <div class="col-12 col-md-6">
                                <label for="newWorkflowStatus" class="form-label">Status</label>
                                <select class="form-select" id="newWorkflowStatus">
                                    <option value="draft">Draft</option>
                                    <option value="active">Active</option>
                                    <option value="inactive">Inactive</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-primary" id="submitWorkflowBtn">
                            <span class="btn-text">Create Workflow</span>
                            <span class="btn-loader d-none">
                                <span class="spinner-border spinner-border-sm me-1"></span>
                                Creating...
                            </span>
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Modal Container -->
    <div id="modal-container"></div>

    <!-- Toast Container -->
    <div class="toast-container position-fixed bottom-0 end-0 p-3" id="toastContainer"></div>

    <!-- Bootstrap 5 JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Sidebar Toggle (inline for immediate functionality) -->
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            var toggle = document.getElementById('sidebarToggle');
            var sidebar = document.getElementById('sidebar-container');
            var backdrop = document.getElementById('sidebarBackdrop');
            
            if (toggle && sidebar) {
                toggle.addEventListener('click', function() {
                    sidebar.classList.toggle('show');
                    if (backdrop) backdrop.classList.toggle('show');
                });
            }
            if (backdrop) {
                backdrop.addEventListener('click', function() {
                    sidebar.classList.remove('show');
                    backdrop.classList.remove('show');
                });
            }
        });
    </script>
    <!-- Mock API (for demo mode - load before other scripts) -->
    <script src="/assets/js/mock-api.js"></script>
    <!-- App Module -->
    <script type="module" src="/assets/js/app.js"></script>
    <!-- Workflows Page Script -->
    <script type="module">
        import { initWorkflowsPage } from '/assets/js/pages/workflows.js';
        document.addEventListener('DOMContentLoaded', initWorkflowsPage);
    </script>
</body>
</html>
